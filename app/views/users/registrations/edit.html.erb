<h2>Edit Account Details</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class='API_field'>
  <div class="field">
    <%= f.label :key_id %>
    <%= f.text_field :key_id %>
  </div>

  <div class="field">
    <%= f.label :v_code %>
    <%= f.text_field :v_code %>
  </div>


  <% char_list = ['Character Slot 1', 'Character Slot 2', 'Character Slot 3'] %>
  <% if current_user.key_id != nil and current_user.v_code != nil %>
  <% char_list = User.quick_lookup(current_user.id) %>
  <% end %>
  <div class="field">
    <%= f.label :primary_character %>
    <strong>Note:</strong> your key will need to validate, this is a scheduled task and can take up to 15 min.  However if you know the slot ID you can add that now.
    <%= f.select :primary_character, [['None',nil],[char_list[0],0],[char_list[1],1],[char_list[2],2]] %>
  </div>
  </div>
  <br>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

