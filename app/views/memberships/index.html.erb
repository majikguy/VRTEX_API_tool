<h1>My Groups</h1>

<table>
  <thead>
    <tr>
      <th>Group name</th>
      <th>Group</th>
      <th>Approved?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>

      <tr>
        <% @group_name = Group.where('id' => membership.group_id) %>
        <td><%= @group_name[0].name %></td>
        <td><%= membership.group_id %></td>
        <td><%= membership.approved %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path %>
