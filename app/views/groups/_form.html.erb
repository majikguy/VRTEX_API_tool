<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field columns medium-6">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field columns medium-3">
    <%= f.label :category %><br>
    <%= f.select :category, [['General','General'],['Special Intrest Group (SIG)','SIG'],['Managment','Managment']] %>
  </div>
  <div class="field columns medium-2">
    <%= f.label :level %><br>
    <%= f.number_field :level %>
  </div>
  <div class="field columns medium-12">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
